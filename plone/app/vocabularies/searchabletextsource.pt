<div class="row"
     i18n:domain="plone"
>
  <div class="field"
       tal:define="
         name python:options.get('name');
       "
  >
    <input name="name.query"
           type="text"
           value=""
           tal:attributes="
             name string:${name}.query;
           "
    />
    <input name="name.search"
           type="submit"
           value="Search"
           tal:attributes="
             name string:${name}.search;
           "
           i18n:attributes="value label_search"
    />
  </div>
</div>
